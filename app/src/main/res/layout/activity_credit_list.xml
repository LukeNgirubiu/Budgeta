<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreditList">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/back_icon_btn"
                android:background="@color/app_color"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:fontFamily="@font/asap_2"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text=""
                />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/comp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:weightSum="6"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/credit_amount"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:hint="Update dept/credit"
                android:background="@drawable/edittext_solid"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:maxLength="8"
                android:layout_margin="10dp"
                android:paddingStart="20dp"
                />
            <Button
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="Submit"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_ls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_margin="10dp"
            />
    </LinearLayout>

</LinearLayout>