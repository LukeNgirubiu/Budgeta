<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/transaction_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="15dp"
            android:fontFamily="@font/asap_2"
            android:textStyle="italic"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/amount_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.6"
            android:textSize="18dp"
            android:fontFamily="@font/asap_2"
            android:textStyle="bold"
            android:text="Amount"
            android:layout_marginTop="5dp"
           app:layout_constraintTop_toBottomOf="@+id/transaction_date"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/amount_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.4"
            android:textSize="18dp"
            android:fontFamily="@font/asap_2"
            android:textStyle="bold"
            android:textColor="@color/cash_color"
            android:text="Amount"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/transaction_date"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/unpaid_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.6"
            android:textSize="18dp"
            android:fontFamily="@font/asap_2"
            android:textStyle="bold"
            android:text="Pending amount"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/amount_label"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/pending_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.4"
            android:textSize="18dp"
            android:fontFamily="@font/asap_2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Amount"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/amount_now"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/paid_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.6"
            android:textSize="18dp"
            android:fontFamily="@font/asap_2"
            android:textStyle="bold"
            android:text="Total Paid"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/unpaid_label"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/paid_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.4"
            android:textSize="18dp"
            android:fontFamily="@font/asap_2"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:text="Amount"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/pending_amount"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>