<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".AddBudget">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/toolbar"
            android:id="@+id/toobarAddBudget"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Name"
          android:textSize="20dp"
          android:textColor="@color/app_color"
          android:layout_marginHorizontal="10dp"
          android:layout_marginBottom="5dp"
          />
        <EditText
            android:id="@+id/budget_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_solid"
            android:layout_marginHorizontal="10dp"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:maxLength="35"
            android:hint="Provide a name for the budget"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/name_errors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textSize="15dp"
            android:textStyle="italic"
            android:textColor="@color/error"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="15dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="20dp"
            android:textColor="@color/app_color"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/budget_details"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="textMultiLine|textAutoComplete"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:maxLines="7"
            android:maxLength="150"
            android:hint="Describe this budget"
            android:background="@drawable/edittext_solid"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/details_errors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textSize="15dp"
            android:textStyle="italic"
            android:textColor="@color/error"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/dates_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dates"
            android:textSize="20dp"
            android:textColor="@color/app_color"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:orientation="vertical"
              android:id="@+id/date_layout"
              android:visibility="gone"
              >
              <TextView
                  android:id="@+id/start_date"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_marginHorizontal="10dp"
                  android:inputType="text"
                  android:textSize="20dp"
                  android:background="@drawable/edittext_solid"
                  android:padding="5dp"
                  android:paddingTop="5dp"
                  android:hint="Start Date"
                  />
              <TextView
                  android:id="@+id/expiry_date"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_marginHorizontal="10dp"
                  android:layout_marginTop="20dp"
                  android:background="@drawable/edittext_solid"
                  android:hint="Expiry Date"
                  android:inputType="text"
                  android:paddingTop="5dp"
                  android:padding="5dp"
                  android:textSize="20dp"
                  app:layout_constraintTop_toBottomOf="@+id/start_date"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"/>
          </LinearLayout>
        <TextView
            android:id="@+id/dates_errors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textSize="15dp"
            android:textStyle="italic"
            android:textColor="@color/error"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/submit_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_btn_bg"
            android:text="Submit"
            android:textColor="@color/white"/>
    </LinearLayout>
</ScrollView>