<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".AddCredit">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <include layout="@layout/toolbar" android:id="@+id/toolbar_form"/>
        <TextView
            android:id="@+id/credit_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="22dp"
            android:fontFamily="@font/asap_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_form"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
         />
        <EditText
            android:id="@+id/credit_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/credit_name_label"
            android:maxLines="1"
            android:inputType="textAutoComplete"
            android:maxLength="35"
            android:padding="5dp"
            android:hint="John doe"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/edittext_solid"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="7dp"
            android:layout_marginHorizontal="10dp"
            />
          <TextView
              android:id="@+id/credit_name_error"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Error"
              android:textStyle="italic"
              android:textSize="18dp"
              android:textColor="@color/error"
              android:fontFamily="@font/asap_2"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/credit_name"
              android:layout_marginHorizontal="10dp"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:visibility="gone"/>
        <TextView
            android:id="@+id/creditor_details_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textStyle="bold"
            android:textSize="22dp"
            android:fontFamily="@font/asap_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/credit_name_error"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
        <EditText
            android:id="@+id/creditor_details"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:maxLines="3"
            android:inputType="textAutoComplete|textMultiLine"
            android:maxLength="70"
            android:padding="5dp"
            android:textSize="22dp"
            android:hint="Contents here"
            android:textColor="@color/black"
            android:background="@drawable/edittext_solid"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/creditor_details_label"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/details_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textStyle="italic"
            android:textSize="18dp"
            android:textColor="@color/error"
            android:fontFamily="@font/asap_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/creditor_details"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/phone_number_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textStyle="bold"
            android:textSize="22dp"
            android:fontFamily="@font/asap_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_error"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
        <EditText
            android:id="@+id/cell_phone_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLines="1"
            android:inputType="phone"
            android:maxLength="13"
            android:padding="8dp"
            android:textSize="22dp"
            android:hint="Contact eg +254712000010"
            android:textColor="@color/black"
            android:background="@drawable/edittext_solid"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_number_label"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="10dp"
            />
        <TextView
            android:id="@+id/phone_number_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textStyle="italic"
            android:textSize="18dp"
            android:textColor="@color/error"
            android:fontFamily="@font/asap_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cell_phone_number"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/amount_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textStyle="bold"
            android:textSize="22dp"
            android:fontFamily="@font/asap_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_number_error"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/edittext_solid"
            android:hint="eg 2500"
            android:inputType="numberDecimal"
            android:maxLength="8"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="22dp"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount_label" />

        <TextView
            android:id="@+id/amount_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textStyle="italic"
            android:textSize="18dp"
            android:textColor="@color/error"
            android:fontFamily="@font/asap_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date due"
            android:textStyle="bold"
            android:textSize="22dp"
            android:fontFamily="@font/asap_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount_error"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
        <TextView
            android:id="@+id/settle_date"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/edittext_solid"
            android:fontFamily="@font/asap_1"
            android:paddingVertical="5dp"
            android:paddingStart="20dp"
            android:text="Date"
            android:textSize="22dp"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_label"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/date_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error"
            android:textStyle="italic"
            android:textSize="18dp"
            android:textColor="@color/error"
            android:fontFamily="@font/asap_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settle_date"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_error"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_btn_bg"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>