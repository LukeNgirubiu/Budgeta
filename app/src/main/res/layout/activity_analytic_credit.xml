<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AnalyticCredit">
    <include layout="@layout/customtoolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/weak_grey"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/daily_credit"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/stronger_grey"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/daily_credit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="June Payables"
                    android:textSize="16sp"
                    android:textColor="@color/app_color"
                    />
                <TextView
                    android:id="@+id/daily_credit_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/daily_credit_label"
                    android:text="Ksh 2300"
                    android:textSize="23sp"
                    android:textColor="@color/app_color"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/monthly_credit"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintWidth_percent="0.46"
            app:cardBackgroundColor="@color/stronger_grey"
            app:layout_constraintLeft_toRightOf="@+id/daily_credit"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/monthly_credit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="Annual Payables"
                    android:textColor="@color/app_color"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/daily_monthly_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/monthly_credit_label"
                    android:text="Ksh 2300"
                    android:textSize="23sp"
                    android:textColor="@color/app_color"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/debt_daily"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintWidth_percent="0.46"
            app:cardBackgroundColor="@color/stronger_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/daily_credit"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/daily_dept_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/app_color"
                    />
                <TextView
                    android:id="@+id/dialy_dept_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/daily_dept_label"
                    android:text="Ksh 2300"

                    android:textSize="23sp"
                    android:textColor="@color/app_color"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/annual_received"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/stronger_grey"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintLeft_toRightOf="@+id/debt_daily"
            app:layout_constraintTop_toBottomOf="@+id/monthly_credit"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/annual_dept_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Annual Receivables"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/app_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/annual_dept_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/annual_dept_label"
                    android:text="Ksh 2300"
                    android:textSize="23sp"
                    android:textColor="@color/app_color"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@+id/annual_received"
           app:cardCornerRadius="10dp"
           android:layout_marginHorizontal="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@color/bg1_color"
               >
               <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                   android:id="@+id/aa_chart_view"
                   android:layout_width="match_parent"
                   android:layout_height="500dp"
                   android:layout_margin="10dp">
               </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>