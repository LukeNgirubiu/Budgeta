<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Help"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/help_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/app_color"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@color/app_color"
                android:src="@drawable/back_icon_btn" />
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/asap_2"
                android:text="Help"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginVertical="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/app_color"
                android:src="@drawable/more_vert_menu" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/monthly_image"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@raw/home"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/estimate_Title"
                android:text="Estimates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/asap_2"
                android:paddingLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/monthly_image"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/estimate_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_estimate"
                android:textSize="18sp"
                android:fontFamily="@font/asap_2"
                android:paddingLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/estimate_Title"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/estimate_Fund"
                android:text="Fund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/asap_2"
                android:paddingLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/estimate_txt"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/fund_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_funds"
                android:textSize="18sp"
                android:fontFamily="@font/asap_2"
                android:paddingLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/estimate_Fund"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/credit_help"
                android:text="Credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/asap_2"
                android:paddingLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fund_txt"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/credit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_credits"
                android:textSize="18sp"
                android:fontFamily="@font/asap_2"
                android:paddingLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/credit_help"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/graph_ttle"
                android:text="Analytics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/asap_2"
                android:paddingLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/credit_txt"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/graph_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_graph"
                android:textSize="18sp"
                android:fontFamily="@font/asap_2"
                android:paddingLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/graph_ttle"
                android:layout_marginTop="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>